<%- include ('../../partials/header.ejs')%>
<body>
    <%- include ('../../partials/navbar.ejs')%>
    <div class="container">
        <hr>
            <h2>Categorias</h2>
            <a href="/admin/categories/new">Adicionar nova categoria</a>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%categories.forEach(cat => {%>
                    <tr>
                        <th><%= cat.id%></th>
                        <th><%= cat.title%></th>
                        <th><%= cat.slug%></th>
                        <th>
                            <a href="/admin/categories/edit/<%= cat.id%>" class="btn btn-warning">Editar</a>
                            
                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                <input  type="hidden" name="id" value="<%= cat.id %>">
                                <button class="btn btn-danger">Excluir</button>
                            </form>
                        </th>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</body>
<%- include ('../../partials/footer.ejs')%>
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        let decision = confirm("Deseja excluir essa categoria?")

        if(decision)
            form.submit();
    };

    function confirmEdit(event, form){
        event.preventDefault();
        let decision = confirm("Deseja editar essa categoria?")
        
        if(decision)
            form.submit();
        };
</script>